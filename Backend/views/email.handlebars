<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge" />
  <title>Order Details</title>

  <style>
    h1 {
      text-align: center;
      color: blue
    }
    h2{
      text-align: center;
      margin-bottom: 12px;
      margin-top: 40px;
    }

    h3 {
      text-align: center;
      color: green;
      
    }
    table{
      margin-left: auto;
  margin-right: auto;
    }
    table, th, td {
  border: 1px solid;
  
}
th, td {

padding: 12px;
  font-size: 14px;
  text-align: center;
  }
  </style>

</head>

<body>
  <h1>Hello {{name}}! </h1>
  <h3>Your Order has been placed successfully. </h3>

<h2></h2>
  <h2>Order Details:</h2>
  <h3>
  <table >
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>TotalPrice</th>

    </tr>

    {{#each orderItems}}
    <tr>
      <td>{{name}}</td>
      <td>{{description}}</td>
      <td>{{price}}</td>
      <td>{{quantity}}</td>
      <td>{{totalPrice}}</td>

    </tr>

    {{/each}}



  </table>
</h3>

<h2></h2>
  <h2>Order Summary:</h2>
  <h3>
    <table > 


      <tr>
        <td className="text-muted">Subtotal   </td>

        <td>Rs. {{subtotal}}</td>
      </tr>
      <tr>
        <td className="text-muted">Delivery Fee   </td>
        <td>Rs. {{deliveryFee}}</td>
      </tr>
      <tr>
        <td>Total </td>
        <td>Rs. {{total}}</td>

      </tr>







    </table>
  </h3>
</body>

</html>